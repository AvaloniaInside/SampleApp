<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:AvaloniaInside.SampleApp"
             x:Class="AvaloniaInside.SampleApp.App">
    <Application.DataTemplates>
        <local:ViewLocator />
    </Application.DataTemplates>

    <Application.Styles>
        <FluentTheme Mode="Light" />
        <StyleInclude Source="avares://AvaloniaInside.SampleApp/Theme/Colors.axaml"></StyleInclude>
        <StyleInclude Source="avares://AvaloniaInside.SampleApp/Theme/Icons.axaml"></StyleInclude>
        <StyleInclude Source="avares://AvaloniaInside.SampleApp/Theme/Buttons.axaml"></StyleInclude>
    </Application.Styles>
</Application>